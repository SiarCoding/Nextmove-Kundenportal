{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["server/**/*", "db/**/*"],
    "exclude": ["node_modules"]
  }
  