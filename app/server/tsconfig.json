{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/server",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": ["client/src/*"],
      "@db/*": ["db/*"]
    }
  },
  "include": [
    "../db/**/*.ts",
    "./**/*.ts"
  ],
  "exclude": ["node_modules"]
} 