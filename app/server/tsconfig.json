{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/server",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../client/src/*"],
      "@db/*": ["../db/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 